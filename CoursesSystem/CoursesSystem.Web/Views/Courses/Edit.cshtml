@using CoursesSystem.Web.Models.CoursesViewModels;
@model CourseViewModel;

<form class="form-horizontal" asp-controller="Courses" asp-action="Edit">
    <div class="form-group" style="visibility:hidden;">
        <label asp-for="@Model.Id" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="@Model.Id">
            <span class="text-danger" asp-validation-for="@Model.Id"></span>
        </div>
    </div>
    <div class="col-lg-8 col-lg-offset-2">
        <div class="form-group">
            <label asp-for="@Model.Name" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.Name">
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Credits" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.Credits">
                <span class="text-danger" asp-validation-for="@Model.Credits"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.LecturerName" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.LecturerName">
                <span class="text-danger" asp-validation-for="@Model.LecturerName"></span>
            </div>
        </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-6 col-sm-6">
                <button class="btn btn-primary" type="submit" style="padding: 8px 25px; border-radius: 11%;">EDIT</button>
            </div>
        </div>
</form>