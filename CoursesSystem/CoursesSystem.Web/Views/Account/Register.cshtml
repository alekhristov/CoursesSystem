@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 mt">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="fileForm" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <fieldset>
                    <h3 class="text-center">Valid information is required to register<span class="req"><small id="req-label"> required *</small></span></h3>

                    <div class="form-group">
                        <label asp-for="Email"><span class="req">* </span> Email: <small>This will be your login username</small></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><span class="req">* </span> Password:</label>
                        <input asp-for="Password" class="form-control inputpass" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><span class="req">* </span> Confirm password:</label>
                        <input asp-for="ConfirmPassword" class="form-control inputpass" placeholder="Enter again to validate" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"><span class="req">* </span> First name: <small>This will be your display first name</small></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"><span class="req">* </span> Last name: <small>This will be your display last name</small></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FacultyNumber">Faculty number: <small>You need to enter your faculty number here</small></label>
                        <input asp-for="FacultyNumber" class="form-control" />
                        <span asp-validation-for="FacultyNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn  btn-primary" type="submit" name="submit_reg" value="Register">
                    </div>


                </fieldset>
            </form><!-- ends register form -->
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
